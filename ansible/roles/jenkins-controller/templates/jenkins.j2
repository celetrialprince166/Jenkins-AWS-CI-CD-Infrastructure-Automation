# ============================================================================
# JENKINS CONFIGURATION FILE
# ============================================================================
# PURPOSE: Configure Jenkins service startup options
# LOCATION: /etc/default/jenkins (on the server)
# TEMPLATE: ansible/roles/jenkins-controller/templates/jenkins.j2
# MANAGED BY: Ansible - DO NOT EDIT MANUALLY
# ============================================================================

# ----------------------------------------------------------------------------
# JENKINS USER AND GROUP
# ----------------------------------------------------------------------------
# The user and group Jenkins runs as
# SECURITY: Never run Jenkins as root
JENKINS_USER="{{ jenkins_user }}"
JENKINS_GROUP="{{ jenkins_group }}"

# ----------------------------------------------------------------------------
# JENKINS HOME DIRECTORY
# ----------------------------------------------------------------------------
# Where Jenkins stores all its data (jobs, plugins, configs)
# CRITICAL: This should be on EFS for persistence
JENKINS_HOME="{{ jenkins_home }}"

# ----------------------------------------------------------------------------
# JENKINS JAVA OPTIONS
# ----------------------------------------------------------------------------
# JVM options passed to Jenkins
# 
# Current settings:
# {{ jenkins_java_options | replace('\n', '\n# ') }}
#
JAVA_ARGS="{{ jenkins_java_options }}"

# ----------------------------------------------------------------------------
# JENKINS HTTP CONFIGURATION
# ----------------------------------------------------------------------------
# Port for web UI
HTTP_PORT={{ jenkins_http_port }}

# Listen address (0.0.0.0 = all interfaces)
HTTP_HOST={{ jenkins_listen_address }}

# ----------------------------------------------------------------------------
# JENKINS HTTPS CONFIGURATION
# ----------------------------------------------------------------------------
# HTTPS port (-1 = disabled, ALB handles SSL)
HTTPS_PORT={{ jenkins_https_port }}

# ----------------------------------------------------------------------------
# JENKINS AGENT PORT
# ----------------------------------------------------------------------------
# Port for inbound agent (JNLP) connections
# Agents connect to controller on this port
JENKINS_AGENT_PORT={{ jenkins_agent_port }}

# ----------------------------------------------------------------------------
# JENKINS ARGUMENTS
# ----------------------------------------------------------------------------
# Additional arguments passed to Jenkins
#
# --httpPort: Web UI port
# --httpListenAddress: Which interface to bind to
# --prefix: URL prefix (empty = root)
#
JENKINS_ARGS="--httpPort=$HTTP_PORT --httpListenAddress=$HTTP_HOST"

# ----------------------------------------------------------------------------
# JAVA EXECUTABLE
# ----------------------------------------------------------------------------
# Path to Java binary
# Uses the system default Java
JAVA=/usr/bin/java

# ----------------------------------------------------------------------------
# JENKINS WAR FILE
# ----------------------------------------------------------------------------
# Location of Jenkins WAR file
JENKINS_WAR=/usr/share/java/jenkins.war

# ----------------------------------------------------------------------------
# JENKINS LOG
# ----------------------------------------------------------------------------
# Where Jenkins writes its log
# Note: Also logs to systemd journal
JENKINS_LOG=/var/log/jenkins/jenkins.log

# ----------------------------------------------------------------------------
# PID FILE
# ----------------------------------------------------------------------------
# Process ID file location
PIDFILE=/var/run/jenkins/jenkins.pid

